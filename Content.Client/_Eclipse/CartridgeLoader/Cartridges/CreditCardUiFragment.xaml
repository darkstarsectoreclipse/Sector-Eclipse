<cartridges:CreditCardUiFragment
    xmlns="https://spacestation14.io"
    xmlns:cartridges="clr-namespace:Content.Client._Eclipse.CartridgeLoader.Cartridges"
    xmlns:customControls="clr-namespace:Content.Client.Administration.UI.CustomControls"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    Orientation="Vertical"
    HorizontalExpand="True"
    VerticalExpand="True"
    Margin="5">

    <!-- main container -->
    <BoxContainer Orientation="Vertical"
                  HorizontalExpand="True"
                  VerticalExpand="True">

        <!-- Header with app title and new chat button -->
        <controls:StripeBack MinSize="48 48"
                             VerticalExpand="False">

            <Label Text="{Loc banking-app-title}"
                   StyleClasses="LabelHeading"
                   HorizontalExpand="True"
                   Margin="8 0"
                   VerticalAlignment="Center" />

        </controls:StripeBack>

    </BoxContainer>

</cartridges:CreditCardUiFragment>
