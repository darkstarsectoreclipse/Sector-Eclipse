<BoxContainer xmlns="https://spacestation14.io"
              xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
              xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
              HorizontalExpand="True"
              Orientation="Vertical">
    <cc:HSeparator/>
    <BoxContainer Orientation="Vertical">
        <LineEdit Name="DelusionTitle" Margin="5 0 0 0" />
        <PanelContainer Margin="20 10 0 0" MinHeight="128">
            <PanelContainer.PanelOverride>
                <graphics:StyleBoxFlat BackgroundColor="1B1B1B" />
            </PanelContainer.PanelOverride>
            <BoxContainer Orientation="Horizontal" SeparationOverride="5">
                <TextEdit Name="DelusionContent" HorizontalExpand="True" Editable="True" MinWidth="500" MinHeight="80"/>
            </BoxContainer>
        </PanelContainer>
    </BoxContainer>
    <BoxContainer Orientation="Horizontal" Align="End" Margin="0 10 5 10">
        <Button Name="Delete" Text="{Loc delusion-admin-ui-delete}" ModulateSelfOverride="Red"/>
    </BoxContainer>
</BoxContainer>
